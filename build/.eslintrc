{
    "env": {
        "node": true
    },
    "plugins": [
        "node"
    ],
    "extends": [
        "plugin:node/recommended"
    ],
    "rules": {
        "no-console": "off",
        "node/no-unpublished-require": "off",
        "node/no-unsupported-features/node-builtins": ["error", { "version": ">=8.5.0" }],
        "node/shebang": ["error", {
            "convertPath": {
                "build/npm-bin/**/*.js": ["^build/npm-bin/(.+?)\\.js$", "bin/$1.js"]
            }
        }]
    },
    "globals": {
        "console": true
    }
}
