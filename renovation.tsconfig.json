{
  "extends": "./tsconfig.json",
  "compilerOptions": {
      "jsx": "preserve",
      "skipLibCheck": true,
      "noEmit": true,
      "target": "ES2019",
      "typeRoots": [],
      "types": ["@types/jest"],
      "emitDecoratorMetadata": false, // coverage broke if true
      "paths": {
          "@js/*": [
            "./js/*"
          ],
          "@ts/*": [
            "./js/__internal/*"
          ]
      }
  },
  "include": ["./js/renovation"],
  "exclude": ["artifacts","node_modules","**/dist","playground", "**/*.j.tsx"]
}
