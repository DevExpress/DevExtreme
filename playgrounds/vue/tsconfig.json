{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./temp",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "paths": {
      "devextreme-vue": [
        "../../node_modules/devextreme-vue/src"
      ],
      "devextreme-vue/*": [
        "../../node_modules/devextreme-vue/src/*"
      ]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ],
}
