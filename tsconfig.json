{
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "target": "es5",
    "jsx": "preserve",
    "declaration": false,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "es7",
      "es2017.object",
      "dom"
    ],
    "baseUrl": "./",
    "stripInternal": true,
    "paths": {
      "*": [
        "node_modules"
      ]
    },
    "outDir": "dist"
  },
  "exclude": [
    "artifacts",
    "node_modules",
    "**/dist",
    "playground"
  ],
  "include": [
    "js/renovation",
    "themebuilder-scss",
    "themebuilder",
    "testing/jest",
    "testing/testcafe"
  ]
}
