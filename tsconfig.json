{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "devextreme-angular": ["devextreme-angular/src"],
      "devextreme-angular/*": ["devextreme-angular/src/*"],
      "devextreme-react-generator": ["devextreme-react-generator/src"],
      "devextreme-react": ["devextreme-react/src"],
      "devextreme-react/*": ["devextreme-react/src/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "noEmitOnError": true,
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": ["es2015", "es2015.iterable", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
