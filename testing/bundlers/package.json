{
  "name": "devextreme-modules-test",
  "version": "1.0.0",
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "browserify": "^17.0.0",
    "cross-env": "^7.0.3",
    "devextreme-cldr-data": "^1.0.3",
    "globalize": "^1.6.0",
    "parcel": "^2.0.0-beta.2",
    "rollup": "^2.50.0",
    "vite": "^2.3.4",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  },
  "scripts": {
    "test": "npm run generate:entry && npm run build:all && npm run clean",
    "install:devextreme": "install_devextreme_package.sh",
    "generate:entry": "mkdir src && node ./generate_entry_files.js",
    "build:all": "npm run build:webpack-cjs && npm run build:webpack-esm && npm run build:rollup-esm && npm run build:parcel-esm && npm run build:browserify-cjs && npm run build:vite-esm",
    "build:webpack-cjs": "webpack --config ./webpack.config.cjs.js",
    "build:webpack-esm": "webpack --config ./webpack.config.js",
    "build:rollup-esm": "rollup -c",
    "build:parcel-esm": "parcel build ./src/modules_esm.js --no-cache --dist-dir ./dist/dist_parsel",
    "build:browserify-cjs": "cross-env NODE_PATH=./node_modules:./node_modules/globalize/dist browserify ./src/modules_cjs.js -o ./dist/dist_browserify/bundle_cjs.js",
    "build:vite-esm": "vite build",
    "clean": "npx rimraf src dist devextreme-**"
  },
  "alias": {
    "globalize$": "~/node_modules/globalize/dist/globalize.js",
    "globalize": "~/node_modules/globalize/dist/globalize",
    "cldr$": "~/node_modules/cldrjs/dist/cldr.js",
    "cldr": "~/node_modules/cldrjs/dist/cldr"
  }
}
