{
    "private": true,
    "type": "module",
    "devDependencies": {
        "@angular-eslint/eslint-plugin": "^14.1.2",
        "@angular-eslint/eslint-plugin-template": "^14.1.2",
        "@angular-eslint/template-parser": "^14.1.2",
        "@nrwl/eslint-plugin-nx": "^15.0.13",
        "@nrwl/jest": "^15.2.1",
        "@swc/core": "^1.3.19",
        "@swc/jest": "^0.2.23",
        "@testing-library/react": "13.4.0",
        "@types/jest": "^29.2.3",
        "@types/node": "18.7.18",
        "@types/react": "18.0.20",
        "@types/react-dom": "18.0.6",
        "@types/react-router-dom": "5.3.3",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "babel-jest": "^29.3.1",
        "eslint": "^8.28.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-devextreme": "^0.2.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jsx-a11y": "6.6.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-react": "7.31.8",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-rulesdir": "^0.2.1",
        "eslint-plugin-unicorn": "^45.0.0",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "nx": "15.0.10",
        "pre-commit": "^1.2.2",
        "react-test-renderer": "18.2.0",
        "rimraf": "^3.0.2",
        "staged-git-files": "^1.3.0",
        "ts-node": "10.9.1",
        "typescript": "^4.7.3"
    },
    "scripts": {
        "build:angular": "nx build @devextreme/angular",
        "build:core": "nx build @devextreme/core",
        "build:react": "nx build @devextreme/react",
        "build:packages": "npm run build:core && npm run build:react",
        "build": "nx run-many --target=build --projects=@devextreme/core,@devextreme/components,@devextreme/react,@devextreme/ui-core --skip-nx-cache",
        "start:react": "nx start @playgrounds/react",
        "start:angular": "nx start @playgrounds/angular",
        "watch": "nx run-many --target=watch",
        "clean": "rimraf ./{packages,playgrounds}/*/{lib,dist,tsc-out,*.tsbuildinfo} && nx reset",
        "test": "nx run-many --target=test",
        "test:core": "cd packages/core && jest",
        "test:e2e": "nx run-many --target=e2e",
        "test:jest": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json --no-cache",
        "pre-commit": "node build/pre-commit/index.cjs",
        "lint": "npm run lint:eslint",
        "lint:core": "eslint --ignore-path .eslintignore packages/core/src/**",
        "lint:eslint": "eslint --ignore-path .eslintignore packages/*/src/**",
        "lint:eslint:fix": "eslint --ignore-path .eslintignore --fix packages/*/src/**",
        "tsc:build": "tsc --build ./tsconfig.project.json",
        "tsc:watch": "npm run tsc:build -- --watch",
        "update:tsconfig": "ts-node-esm scripts/update-package-tsconfig.ts"
    },
    "workspaces": [
        "packages/*",
        "playgrounds/*"
    ],
    "pre-commit": [
        "pre-commit"
    ]
}
