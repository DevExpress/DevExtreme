{
    "compileOnSave": false,
    "compilerOptions": {
        "module":"ESNext",
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "jsx": "preserve",
        "importHelpers": true,
        "target": "ES2019",
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "exclude": ["node_modules"],
    "include": ["**/*"],
}