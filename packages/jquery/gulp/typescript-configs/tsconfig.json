{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": false,
        "typeRoots": ["node_modules/@types"],
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "declaration": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true  
    },
    "exclude": [
        "node_modules"
    ]
}
