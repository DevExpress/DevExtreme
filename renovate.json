{
    "extends": [
        "config:base"
    ],
    "baseBranches": [
        "22_1",
        "21_2"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "every 1 day"
        ],
        "automerge": true
    },
    "vulnerabilityAlerts": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "packagePatterns": [
                "*"
            ],
            "enabled": false
        }, {
            "description": "enzyme -> cherrio -> htmlparser2 -> typescript@^4.7",
            "packagePatterns": [
                "enzyme"
            ],
            "enabled": false
        }
    ],
    "assignAutomerge": true,
    "reviewers": [
        "team:devextreme-core"
    ],
    "ignorePaths": [
        ".github"
    ],
    "constraints": {
        "node": "^16.3.0"
    }
}
