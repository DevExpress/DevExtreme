{
    "extends": [
        "config:base"
    ],
    "baseBranches": [
        "21_2"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "every 1 day"
        ],
        "automerge": true
    },
    "vulnerabilityAlerts": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "packagePatterns": [
                "*"
            ],
            "enabled": false
        }
    ],
    "reviewers": [
        "team:@DevExpress/devextreme-core"
    ],
    "ignorePaths": [
        ".github"
    ]
}
