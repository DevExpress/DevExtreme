{
    "extends": [
        "config:base"
    ],
    "baseBranches": [
        "22_1",
        "21_2"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "every 1 day"
        ],
        "automerge": true
    },
    "vulnerabilityAlerts": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchPackageType": [
                "patch"
            ],
            "automerge": true
        },
        {
            "matchPackagePatterns": [
                "*"
            ],
            "matchPackageType": [
                "major",
                "minor"
            ],
            "enabled": false
        }
    ],
    "assignAutomerge": true,
    "reviewers": [
        "team:devextreme-devops"
    ],
    "ignorePaths": [
        ".github"
    ],
    "constraints": {
        "node": "^16.3.0"
    }
}
