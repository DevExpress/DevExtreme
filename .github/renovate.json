{
    "extends": [
        "config:js-lib"
    ],
    "prConcurrentLimit": 2,
    "semanticCommits": "enabled",
    "baseBranches": [
        "23_2",
        "23_1"
    ],
    "labels": [
        "dependencies"
    ],
    "vulnerabilityAlerts": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "matchPackagePrefixes": [ "cldr-" ],
            "groupName": "CLDR"
        },
        {
            "matchPackagePatterns": [
                "^@devextreme-generator/"
            ],
            "enabled": false
        },
        {
            "matchPackageNames": [
                "@devextreme/runtime",
                "devexpress-gantt",
                "devexpress-diagram",
                "eslint-config-devextreme",
                "rrule",
                "sass-embedded",
                "sinon",
                "systemjs"
            ],
            "enabled": false
        },
        {
            "matchPackageNames": [ "typescript", "typescript-min" ],
            "matchUpdateTypes": [ "major", "minor" ],
            "enabled": false
        },
        {
            "matchPackagePatterns": [ "*" ],
            "excludePackagePrefixes": [ "cldr-" ],
            "matchUpdateTypes": [ "major" ],
            "dependencyDashboardApproval": true
        }
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": ["before 4am on Thursday"]
    },
    "constraints": {
        "node": "^16.3.0"
    }
}
