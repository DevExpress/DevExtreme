{
    "rules": {
        "no-restricted-modules": [
            "error",
            {
                "patterns": ["*.js"]
            }
        ],
        "no-undef": "error"
    },
    "globals": {
        "clearInterval": true,
        "clearTimeout": true,
        "document": true,
        "Element": true,
        "Event": true,
        "exports": true,
        "FormData": true,
        "history": true,
        "HTMLCollection": true,
        "HTMLElement": true,
        "isFunction": true,
        "localStorage": true,
        "location": true,
        "module": true,
        "navigator": true,
        "Node": true,
        "NodeList": true,
        "require": true,
        "setInterval": true,
        "setTimeout": true,
        "XMLHttpRequest": true
    }
}
