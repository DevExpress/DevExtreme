{
    "rules": {
        "no-restricted-modules": [
            "error",
            {
                "patterns": ["*.js"]
            }
        ],
        "no-undef": "error"
    },
    "globals": {
        "Element": true,
        "Event": true,
        "FormData": true,
        "history": true,
        "HTMLCollection": true,
        "HTMLElement": true,

        "setInterval": true,
        "setTimeout": true,
        "clearInterval": true,
        "clearTimeout": true,
        "require": true,
        "module": true,
        "exports": true
    }
}
