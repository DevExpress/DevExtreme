  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
        "--runInBand",
        "--no-cache"
      ],
      "runtimeArgs": [
        "--harmony"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}"
    },
  ]
}
